<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.messagesviewlet">

    <configlet
        title="Messages viewlet settings"
        action_id="messagesviewlet.settings"
        appId="messagesviewlet"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/messages-config"
        icon_expr="string:$portal_url/++resource++collective.messagesviewlet/message-icon.png"
        visible="True"
        i18n:attributes="title">
        <permission>Content rules: Manage rules</permission>
    </configlet>

</object>