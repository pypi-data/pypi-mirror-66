<?xml version="1.0"?>
<object name="tdf.templateuploadcenter.tupreleaselink" meta_type="Dexterity FTI"
        i18n:domain="tdf.templateuploadcenter" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <!-- Basic metadata -->
    <property name="title" i18n:translate="">Template Linked Release</property>
    <property name="description" i18n:translate="">A linked template release</property>

    <property name="allow_discussion">True</property>
    <property name="global_allow">False</property>
    <property name="filter_content_types">True</property>
    <property name="allowed_content_types">

    </property>

    <!-- schema interface -->
    <property name="schema">tdf.templateuploadcenter.tupreleaselink.ITUpReleaseLink</property>

    <!-- class used for content items -->
    <property name="klass">tdf.templateuploadcenter.customreleasename.ReleaseCustomName</property>

    <!-- add permission -->
    <property name="add_permission">tdf.templateuploadcenter.AddTemplateProject</property>

    <!-- enabled behaviors -->
    <property name="behaviors">
        <element value="plone.app.multilingual.dx.interfaces.IDexterityTranslatable" />
        <element value="plone.app.dexterity.behaviors.metadata.IOwnership" />
        <element value="plone.app.dexterity.behaviors.metadata.IPublication" />
        <element value="collective.dexteritytextindexer.behavior.IDexterityTextIndexer" />
        <element value="cioppino.twothumbs.interfaces.ILoveThumbsDontYou" />
        <element value="plone.app.dexterity.behaviors.metadata.ICategorization" />
    </property>

    <!-- View information -->
    <property name="default_view">view</property>
    <property name="default_view_fallback">False</property>
    <property name="view_methods">
        <element value="view"/>
    </property>

    <!-- Method aliases -->
    <alias from="(Default)" to="(selected layout)"/>
    <alias from="edit" to="@@edit"/>
    <alias from="sharing" to="@@sharing"/>
    <alias from="view" to="@@view"/>

    <!-- Actions -->
    <action title="View" action_id="view" category="object" condition_expr=""
            url_expr="string:${object_url}" visible="True">
        <permission value="View"/>
    </action>
    <action title="Edit" action_id="edit" category="object" condition_expr=""
            url_expr="string:${object_url}/edit" visible="True">
        <permission value="Modify portal content"/>
    </action>
</object>
